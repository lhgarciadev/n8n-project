# --- General ---
TZ=America/Bogota
GENERIC_TIMEZONE=America/Bogota

# --- Domain / External URL (ajusta si usas proxy externo) ---
WEBHOOK_URL=http://localhost:5678

# --- Auth para acceder a n8n ---
N8N_BASIC_AUTH_ACTIVE=true
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=mysecretpassword

# --- Cifrado de credenciales internas ---
# Mínimo 32 caracteres aleatorios, ¡no lo compartas!
N8N_ENCRYPTION_KEY=ChangeThisEncryptionKey1234567890

# --- PostgreSQL ---
POSTGRES_DB=n8n
POSTGRES_USER=n8n
POSTGRES_PASSWORD=n8n

# --- Config n8n con PostgreSQL ---
DB_TYPE=postgresdb
DB_POSTGRESDB_HOST=db
DB_POSTGRESDB_PORT=5432
DB_POSTGRESDB_DATABASE=${POSTGRES_DB}
DB_POSTGRESDB_USER=${POSTGRES_USER}
DB_POSTGRESDB_PASSWORD=${POSTGRES_PASSWORD}
